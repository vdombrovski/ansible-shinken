[Unit]
Description=Shinken Arbiter
After=syslog.target
PartOf=shinken.target

[Service]
Type=forking
ExecStart=/usr/bin/shinken-arbiter -d -r -c /etc/shinken/shinken.cfg
KillMode=mixed
TimeoutStopSec=30
PIDFile=/var/run/shinken/arbiterd.pid
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
